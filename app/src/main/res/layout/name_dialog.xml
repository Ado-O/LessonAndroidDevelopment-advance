<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="java.util.List"/>

    </data>
<FrameLayout
    android:id="@+id/name_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    style="@style/Theme.Design.Light.NoActionBar"
    >

<android.support.constraint.ConstraintLayout
    android:layout_width="280dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:layout_margin="20dp"
        android:textSize="24dp"
        android:textColor="@color/darkTextHigh"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/myEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Item name"
        app:backgroundTint="#727882"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        />

    <Button
        android:id="@+id/dissmiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISSMISS"
        android:layout_margin="10dp"
        android:textColor="#727882"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/myEditText"
        app:layout_constraintRight_toLeftOf="@id/add"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/add"
        android:layout_width="68dp"
        android:layout_height="36dp"
        android:text="ADD"
        android:textColor="#FFFF"
        android:layout_margin="10dp"
        android:background="#2E4DFF"
        app:layout_constraintTop_toBottomOf="@id/myEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
</FrameLayout>
</layout>
